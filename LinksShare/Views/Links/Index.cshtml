@model UserLinks
@{
    ViewData["Title"] = "Links";
}

<div class="horizontal-container">
    <a asp-action="CreateLink" asp-controller="Links" class="btn btn-primary">Create Link</a>
</div>

@if (Model == null)
{
    <div class="text-body">You don't have shared links</div>
}
else
{
<div class="vertical-container">
    <h3 class="h3 links-header">@Model.UserName links</h3>

    <div class="container">
        @foreach (var linkInfo in Model.Links)
        {
            <div class="card link-item">
                <div class="card-body">
                    <div class="horizontal-container">
                        <div>
                            <a href="@linkInfo.Link" target="_blank">@linkInfo.Link</a>
                        </div>
                        <div class="right-item">
                            <div class="vertical-container-space-around">
                                <a class="icon-button" asp-action="RemoveLink" asp-route-user="@(Model.UserName)" asp-route-id="@(linkInfo.LinkId)">
                                    <img src="@Url.Content("~/images/Remove.png")" alt="Edit" class="img-icon"/>
                                </a>
                                <a class="icon-button" asp-action="EditLink" asp-route-user="@(Model.UserName)" asp-route-id="@(linkInfo.LinkId)">
                                    <img src="@Url.Content("~/images/Edit.png")" alt="Remove" class="img-icon"/>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="text-body">
                        @linkInfo.Description
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}
